<script language="javascript" src="jquery.min.js"></script>
<script language="javascript" src="js/bootstrap.min.js"></script>
<link rel="stylesheet" href="css/bootstrap.min.css" />
<title>ToDo!</title>

<div class="container">
    <h1 class="text-center mt-2">ToDo List</h1>
    <form>
        <div class="form-group row">
            <label for="inputEditTask" class="col-sm-2 col-form-label">Edit task</label>
            <div class="col-sm-10">
                {{#each getTask}}
                <input type="hidden" name="idTask" value="{{this._id}}">
                <input type="text" name="inputEditTask" class="form-control" id="inputEditTask" value="{{this.title}}">
                {{/each}}
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Priority</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1"
                            value="Very important" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Very important
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2"
                            value="Important">
                        <label class="form-check-label" for="gridRadios2">
                            Important
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3"
                            value="Not important">
                        <label class="form-check-label" for="gridRadios3">
                            Not important
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="form-group row col-sm-10">
            <button type="submit" formaction="/editTask" formmethod="POST" class="btn btn-primary">Edit task</button>
            <button type="submit" formmethod="GET" formaction="/home" class="btn btn-primary ml-2">Exit</button>
        </div>
    </form>
</div>