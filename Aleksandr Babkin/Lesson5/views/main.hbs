<script language="javascript" src="jquery.min.js"></script>
<script language="javascript" src="js/bootstrap.min.js"></script>
<link rel="stylesheet" href="css/bootstrap.min.css" />
<title>Hello world!</title>

<div class="container">
    <h1 class="text-center mt-2">ToDo List</h1>

    <form method="POST" action="/addTask">
        <div class="form-group row">
            <label for="inputTask" class="col-sm-2 col-form-label">Enter task</label>
            <div class="col-sm-10">
                <input type="text" name="inputTask" class="form-control" id="inputTask">
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Priority</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1"
                            value="Very important" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Very important
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2"
                            value="Important">
                        <label class="form-check-label" for="gridRadios2">
                            Important
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3"
                            value="Not important">
                        <label class="form-check-label" for="gridRadios3">
                            Not important
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="form-group row col-sm-10">
            <button type="submit" class="btn btn-primary">Add task</button>
        </div>

    </form>
    <form method="POST" action="/delTask">
        <button type="submit" class="btn btn-danger mb-2">Remove</button>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"></th>
                    {{!-- <th scope="col">#</th> --}}
                    <th scope="col">Tasks</th>
                    <th scope="col">Priority</th>
                </tr>
            </thead>
            <tbody>
                {{#each taskList}}
                <tr>
                    <th scope="row"><input type="checkbox" name="checkBoxTask" class="checkBoxTask" value="{{this._id}}"></th>
                    <td>{{this.title}}</td>
                    <td>{{this.priorityTask}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
</div>
</form>